@using CaptchaMvc.HtmlHelpers
@using CaptchaMvc
@model WebBanHang.Models.ThanhVien
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Layout/_ProductLayout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class=" container">
        <div class=" register">
            <h1>Đăng ký thành viên</h1>
            <hr />
    
                <div class="col-md-6 register-top-grid">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <hr />
                    <h3>Thông tin đăng nhập</h3>
                    <hr />
                    <div>
                        <span>Tài khoản</span>
                        @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <span>Mật khẩu</span>
                        @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <span>Nhập lại mật khẩu</span>
                        @Html.PasswordFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                    </div>
                    <hr />
                    <h3>Thông tin cá nhân </h3>
                    <hr />
                    <div>
                        <span>Họ Tên</span>
                        @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <span>Địa chỉ</span>
                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <span>Email</span>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <span>Số điện thoại</span>
                        @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <span>Câu hỏi bí mật</span>
                        @Html.DropDownList("CauHoi", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.CauHoi, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        <span>Câu trả lời</span>
                        @Html.EditorFor(model => model.CauTraLoi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.CauTraLoi, "", new { @class = "text-danger" })
                    </div>
                    <div>
                        @Html.Captcha(4)
                    </div>
                    <input type="submit" value="Đăng Ký" style="background: #EF5F21;padding: 0.4em 1em;color: #fff; font-size: 1.2em;-webkit-transition: 0.5s all; display: inline-block;border: none; outline: none;">
                </div>

                <div class="clearfix"> </div>
      
        </div>
    </div>
}

